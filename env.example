# T-Invest API Configuration
# Получите токен в личном кабинете T-Invest
TINVEST_API_TOKEN=your_api_token_here

# URL API T-Invest (обычно не нужно менять)
TINVEST_API_URL=invest-public-api.tinkoff.ru
TINVEST_API_PORT=443

# Использовать sandbox окружение (true/false)
TINVEST_API_SANDBOX=true

# Таймаут запросов в миллисекундах
TINVEST_API_TIMEOUT=30000

# ID торгового счета (получите через API или в личном кабинете)
TINVEST_ACCOUNT_ID=your_account_id_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investment_trading
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Scheduler Configuration
SCHEDULER_POOL_SIZE=5
SCHEDULER_SHUTDOWN_TIMEOUT=30
