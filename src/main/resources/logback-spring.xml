<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Определяем переменные для путей к логам -->
    <property name="LOG_BASE_DIR" value="logs"/>
    
    <!-- Консольный аппендер для разработки -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- Аппендер для логов T-Invest API (запросы/ответы) -->
    <appender name="TININVEST_API_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/tinvest-api.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/%d{yyyy-MM-dd}/tinvest-api.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>
    
    <!-- Основной файловый аппендер с ротацией по часам -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/investment-trading-service.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Политика ротации файлов по времени и размеру -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Имя файла при ротации: папка/дата/файл-час-размер.log -->
            <fileNamePattern>${LOG_BASE_DIR}/%d{yyyy-MM-dd}/investment-trading-service.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
            <!-- Максимальный размер файла -->
            <maxFileSize>50MB</maxFileSize>
            <!-- Максимальное количество дней хранения -->
            <maxHistory>30</maxHistory>
            <!-- Общий максимальный размер всех файлов за день -->
            <totalSizeCap>2GB</totalSizeCap>
            <!-- Очистка старых файлов при запуске -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>
    
    <!-- Аппендер для ошибок с ротацией по часам -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/investment-trading-service-error.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Фильтр только для ERROR и WARN -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/%d{yyyy-MM-dd}/investment-trading-service-error.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>
    
    <!-- Аппендер для кэша с ротацией по часам -->
    <appender name="CACHE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/cache-operations.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/%d{yyyy-MM-dd}/cache-operations.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>
    
    <!-- Аппендер для запуска приложения (отдельный лог) -->
    <appender name="STARTUP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_BASE_DIR}/application-startup.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_BASE_DIR}/%d{yyyy-MM-dd}/application-startup.%d{yyyy-MM-dd-HH}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>
    
    <!-- Специальный логгер для кэша -->
    <logger name="com.example.investmenttradingservice.service.CacheService" level="INFO" additivity="false">
        <appender-ref ref="CACHE_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Специальный логгер для T-Invest API запросов/ответов -->
    <logger name="com.example.investmenttradingservice.tinvest.api" level="INFO" additivity="false">
        <appender-ref ref="TININVEST_API_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <logger name="com.example.investmenttradingservice.service.CacheInstrumentsService" level="INFO" additivity="false">
        <appender-ref ref="CACHE_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Логгер для запуска приложения -->
    <logger name="com.example.investmenttradingservice.InvestmentTradingServiceApplication" level="INFO" additivity="false">
        <appender-ref ref="STARTUP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- Логгер для Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.postgresql" level="WARN"/>
    
    <!-- Временный DEBUG логгер для диагностики лимитов -->
    <logger name="com.example.investmenttradingservice.service.OrderGenerationService" level="DEBUG"/>
    <logger name="com.example.investmenttradingservice.service.TInvestApiService" level="DEBUG"/>
    
    <!-- Корневой логгер -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
    
    <!-- Профили для разных окружений -->
    <springProfile name="test">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>
